{
  "name": "yacc-node",
  "version": "1.0.0",
  "description": "Yet Another Clickhouse Client for Node.js",
  "author": "Antonio Vizuete",
  "license": "MIT",
  "types": "./build/cjs/types/index.d.ts",
  "main": "./build/cjs/index.js",
  "files": [
    "build/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./build/esm/types/index.d.ts",
        "default": "./build/esm/index.mjs"
      },
      "require": {
        "types": "./build/cjs/types/index.d.ts",
        "default": "./build/cjs/index.js"
      }
    }
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.6",
    "@swc/core": "^1.3.0",
    "@swc/helpers": "0.4.11",
    "@types/jest": "29.0.0",
    "@types/node": "16",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "commitlint": "^17.1.2",
    "conventional-changelog-atom": "^2.0.8",
    "eslint": "8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "27.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "29.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "regenerator-runtime": "0.13.9",
    "semantic-release": "^19.0.5",
    "ts-jest": "29.0.0",
    "ts-node": "10.9.1",
    "typescript": "~4.7.0"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "lint": "eslint --ext .ts .",
    "test:unit": "jest -c jest.config.json",
    "test:int": "jest -c integration-tests/jest.config.json",
    "clean": "rm -rf ./build",
    "prepare": "if [ -z \"$CI\" ]; then husky install ; fi",
    "build": "yarn clean && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv build/esm/index.js build/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "prepack": "yarn build",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/antoniovizuete/yacc-node.git"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
